 	<div id="edit_group">
	  <%= form_for([@user,@group]) do |f| %>
      <%= render partial: "/shared/errors", locals: {f_object: @group} %>
			  <div class="field mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
				  <%= f.label :name, t("groups.views.add.name"),  class: "mdl-textfield__label" %>
				  <%= f.text_field :name, class: "mdl-textfield__input" %>
				</div>
				<div class="actions">
				  <%= form_submit_button(I18n.t("groups.actions.save.button")) %>
				</div>
	

        
      <div class="group lists-of-checkboxes lists-of-checkboxes_two-panels mdl-grid" id="group_connections">
        <div class="list-of-checked md-cell" id="connections_in_group">
		    	<%= render partial: "connections_select", locals: {connections: @group.connections} %>
		    </div>
		    <div class="mdl-layout-spacer"></div>
 		    <div class="list-of-unchecked md-cell" id="connections_not_in_group">
		      <%= render partial: "connections_select", locals: {connections: (@user_connections-@group.connections)} %>
		    </div>

      </div>
      
  	<% end %>
	</div>
