<h3><%= t("group.views.header") %></h3>

<div id="groups">
 	<div id="add_group">
	  <%= form_for([@user,@group]) do |f| %>
      <%= render partial: "/shared/errors", locals: {f_object: @group} %>
			  <div class="field mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
				  <%= f.label :name, t("group.views.add.name"),  class: "mdl-textfield__label" %>
				  <%= f.text_field :name, class: "mdl-textfield__input" %>
				</div>
				<div class="actions">
				  <%= button_tag( class: "mdl-button mdl-js-button mdl-button--fab mdl-button--colored mdl-js-ripple-effect" ) do %>
				  <i class="material-icons">forward</i><!-- check, save -->
				  <% end %>
				</div>
		<% end %>
	</div>

	<div id="groups_list" class="list">
		<h4><%= t("group.views.list.header") %></h4>
		<ul class="list-with-actions">
		  <%= render( partial: "group", collection: current_user.groups) || t("group.views.list.none") %>
	  </ul>
	</div>
</div>       
       