<h3><%= t("connections.views.header") %></h3>

<p class="help mdl-cell--12-col"><%= t("connections.views.help") %></p>

<div id="connections">
 	<div id="add_connection" class="form-add">
		  <%= render( partial: "form") %>
		  <%= add_new_button(t("connections.actions.new.button")) if @connection.errors.empty? %>
	</div>

	<div id="connections_list" class="list">
		<ul class="list-with-actions mdl-list">
		  <%= render( partial: "connection", collection: current_user.friend_connections) || t("connections.views.list.none") %>
	  </ul>
	</div>
</div>       
       
