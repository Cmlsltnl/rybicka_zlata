	  <%= form_for([@user,@connection]) do |f| %>
      <%= render partial: "/shared/errors", locals: {f_object: @connection} %>
			  <div class="field mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
				  <%= f.label :name, t("connection.views.add.name"),  class: "mdl-textfield__label" %>
				  <%= f.text_field :name, class: "mdl-textfield__input" %>
				</div>
			  <div class="field mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
				  <%= f.label :email, t("connection.views.add.email"),  class: "mdl-textfield__label" %>
				  <%= f.text_field :email, class: "mdl-textfield__input" %>
				</div>
				<div class="actions">
				  <%= button_tag( class: "mdl-button mdl-js-button mdl-button--fab mdl-button--colored mdl-js-ripple-effect" ) do %>
				  <i class="material-icons">add</i>
				  <% end %>
				</div>
		<% end %>
