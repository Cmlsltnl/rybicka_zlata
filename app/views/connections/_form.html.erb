	  <%= form_for([@user,@connection], html: {class: "mdl-shadow--2dp"} ) do |f| %>
      <%= render partial: "/shared/errors", locals: {f_object: @connection} %>
			  <div class="field mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
				  <%= f.label :name, t("connections.views.add.name"),  class: "mdl-textfield__label" %>
				  <%= f.text_field :name, class: "mdl-textfield__input" %>
				</div>
			  <div class="field mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
				  <%= f.label :email, t("connections.views.add.email"),  class: "mdl-textfield__label" %>
				  <%= f.email_field :email, class: "mdl-textfield__input" %>
				</div>
				<div class="actions">
				  <%= form_submit_button(t("connections.actions.save.button")) %>
				</div>
		<% end %>
